{
  '$schema': 'https://docs.renovatebot.com/renovate-schema.json',

  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    'github>aquaproj/aqua-renovate-config#2.10.0',
    "github>suzuki-shunsuke/renovate-config:yaml-language-server#3.3.1",
  ],

  labels: [
    'renovate',
  ],

  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
    },
    {
      matchDepTypes: [
        'action',
      ],
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      pinDigests: true,
      automerge: true,
    }
  ],

  prHourlyLimit: 2,
  prConcurrentLimit: 10,
  branchConcurrentLimit: 20,

  minimumReleaseAge: '3 days', // 公開後3日間は PR を作成しない

  platformAutomerge: true,

  timezone: 'Asia/Tokyo',
  dependencyDashboard: true,
}
